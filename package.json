{
    "name": "react-text-game",
    "version": "0.2.2",
    "description": "A modern, TypeScript-based framework for creating interactive text-based adventure games with a rich web interface. Build immersive narratives through a passage-based system that supports story content, interactive maps, and custom React widgets.",
    "private": true,
    "type": "module",
    "author": "laruss",
    "license": "MIT",
    "keywords": [
        "text-adventure",
        "game-engine",
        "interactive-fiction",
        "typescript",
        "react",
        "valtio",
        "vite",
        "bun",
        "story-game",
        "interactive-map",
        "narrative-game",
        "visual-novel"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/laruss/text-game-template.git"
    },
    "homepage": "https://github.com/laruss/text-game-template#readme",
    "bugs": {
        "url": "https://github.com/laruss/text-game-template/issues"
    },
    "engines": {
        "bun": ">=1.2.10"
    },
    "scripts": {
        "dev": "bunx --bun vite",
        "build": "tsc -b && vite build",
        "lint": "bunx --bun eslint .",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "prettify": "bunx --bun prettier --write .",
        "check:fix": "bun run lint --fix && bun run prettify && bun run typecheck"
    },
    "dependencies": {
        "@heroui/react": "^2.8.4",
        "@tailwindcss/vite": "^4.1.14",
        "crypto-js": "^4.2.0",
        "dexie": "^4.2.0",
        "dexie-react-hooks": "^4.2.0",
        "jsonpath": "^1.1.1",
        "react": "19.2.0",
        "react-device-detect": "2.2.3",
        "react-dom": "19.2.0",
        "react-icons": "^5.5.0",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.14",
        "valtio": "^2.1.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@happy-dom/global-registrator": "^19.0.2",
        "@tailwindcss/postcss": "^4.1.8",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/crypto-js": "^4.2.2",
        "@types/jsonpath": "^0.2.4",
        "@types/react": "19.2.0",
        "@types/react-dom": "19.2.0",
        "@vitejs/plugin-react-swc": "^3.9.0",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react-hooks": "^6.1.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.0.0",
        "prettier": "3.6.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.9",
        "vite-plugin-singlefile": "^2.3.0",
        "@types/bun": "latest"
    }
}
